
import java.util.*;

public class Day {
	
	private int day;
	protected int month;

	public Day(int d, int m) {
		day = d;
		month = m;
		System.out.println(month + "/" + day);
	}
	
	public int getDay(){
		return day;
	}
	
	public int getMonth(){
		return month;
	}
	
	public int findDayNum(){
		int days = day;
		if(month == 1){
			return days;
		}
		if(month == 2){
			days += 31;
		}
		if(month == 3){
			days += 28;
		}
		if(month == 4){
			days += 31;
		}
		return days;
	}

}
