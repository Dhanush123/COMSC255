
public class Day {
	
	private int day;
	protected int month;

	public Day(int d, int m) {
		day = d;
		month = m;
	}
	
	public int getDay(){
		return day;
	}
	
	public int getMonth(){
		return month;
	}
	
	public int findDayNum(){
		int days = 0;
		if(month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12){
			days = month * 31;
		}
		else if(month == 4 || month == 6 || month == 9 || month == 11){
			days = month * 30;
		}
		else {
			days = 56; // 2 * 28
		}
		return days + day;
	}

}
