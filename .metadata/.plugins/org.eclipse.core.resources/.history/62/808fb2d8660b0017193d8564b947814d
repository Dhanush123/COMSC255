
import java.util.*;
import sun.util.calendar.LocalGregorianCalendar.Date;

public class Day {
	
	private int day;
	protected int month;

	public Day(int d, int m) {
		day = d;
		month = m;
		System.out.println(day + "/" + month);
	}
	
	public int getDay(){
		return day;
	}
	
	public int getMonth(){
		return month;
	}
	
	public int findDayNum(){
		int days = 0;
		
		if(month >= 1){
			days += 31;	
		}
		if(month >= 2){
			days += 28;	
		}
		if(month >= 3){
			days += 31;	
		}
		if(month >= 4){
			days += 30;	
			System.out.println(days);
		}
		if(month >= 5){
			days += 31;	
		}
		if(month >= 6){
			days += 30;	
		}
		if(month >= 7){
			days += 31;	
		}
		if(month >= 8){
			days += 31;	
		}
		if(month >= 9){
			days += 30;	
		}
		if(month >= 10){
			days += 31;	
		}
		if(month >= 11){
			days += 30;	
		}
		if(month == 12) {
			days += 31;	
		}
		return days + day;
	}

}
